<div class="modal fade" id="profileModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body" >       
       <div id="profile_modal_body_content" class="span10"></div>
        <ul class="nav remove_overlap">
          <li> <%=link_to "Modify Profile", edit_user_identity_path(current_identity) %></li>
        <% if signed_in? %>
          <% oauth_text = "Add another account" %>

           <li id="fat-menu-group" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Add Group<b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Node Attributes", node_attributes_path %></li>              
                <li><%= link_to "Node Types", node_types_path %></li>              
                <li><%= link_to "Group Types", group_types_path %></li>              
                   
                <li class="divider"></li>                
              </ul>
            </li>
            
		<% else %>
		  <% oauth_text = "Sign up with" %>
		<% end %>
		 
		    <li id="fat-menu" class="dropdown">
		               <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                 <%= oauth_text %> <b class="caret"></b>
               </a>
               <ul class="dropdown-menu">
                 <li><%= link_to "Basic", signup_path, id: "sign_in" %></li>
                 <li><%= link_to "Facebook", "/auth/facebook", id: "sign_in" %></li>
                 <li><%= link_to "Twitter", "/auth/twitter", id: "sign_in" %></li>
                 <li><%= link_to "Linkedin", "/auth/linkedin", id: "sign_in" %></li>
                 <li><%= link_to "Google +", "/auth/gplus", id: "sign_in" %></li>
                 <li class="divider"></li>                
               </ul>
            </li>
          </ul>

             <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>
</div>