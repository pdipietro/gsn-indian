
<div class="modal fade" id="relationModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display:none">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body" >
       <%= form_tag create_relation_user_path(current_identity.id), method: :post do %>        
       <div id="rel_modal_body" class="span10">

         <%= hidden_field_tag "start_node", "", id: "start_node_modal" %>
         <%= hidden_field_tag "end_node", "", id: "end_node_modal" %>
         <h2>Relationship</h2>
         <%= text_field_tag "relationship[type]", "", placeholder: "Relationship Name" %> 
        <div class="modal_relation_attr">
          
             <ul>
               <li> Name </li>
               <li> Value </li>
             </ul>
             <ul>
               <li><%= text_field_tag "relationship[0][name]" %> </li>
               <li><%= text_field_tag "relationship[0][value]" %> </li>
             </ul> 
             <ul>
               <li><%= text_field_tag "relationship[1][name]" %> </li>
               <li><%= text_field_tag "relationship[1][value]" %> </li>
             </ul> 
             <ul>
               <li><%= text_field_tag "relationship[2][name]" %> </li>
               <li><%= text_field_tag "relationship[2][value]" %> </li>
             </ul>
                
         </div>
       </div>
