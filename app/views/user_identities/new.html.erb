<%# provide(:title, 'Sign up') %>


<div class="row">
  <div class="span6 offset3">
    <%= form_tag user_identities_path, class: "form-signin auth_form" do |f| %>
      <%#= f.hidden_field :provider, value: "normal" %>
      <%#= render 'shared/error_messages', object: f.object %>
      <% @user_form_fields.each do |field| %>
        <%= label_tag field[0] %>
        <%= generate_fields(field[0], field[1], field[2]) %>      

    <% end %>
      <%= submit_tag "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>